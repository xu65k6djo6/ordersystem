<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order_check"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ntust.csie.app.orderingsystem.OrderCheck">

    <LinearLayout
        android:id="@+id/ordercheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="top|center_vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="訂單確認"
            android:id="@+id/textView1"
            android:layout_height="80dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="您訂購的餐點如下 :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/imgodMeal"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:layout_width="80dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="店名"
                android:id="@+id/txtodShop"
                android:layout_gravity="top"
                android:layout_marginTop="30dp"
                android:layout_height="55dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品名"
                    android:id="@+id/txtodName"
                    android:layout_gravity="bottom|center_vertical"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="價錢"
                    android:id="@+id/txtodPrice"
                    android:layout_gravity="bottom|center_vertical"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">

        <Button
            android:text="取消訂購"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_weight="0.5" />

        <Button
            android:text="送出訂單"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btndelivery"
            android:layout_weight="0.5" />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/finish"
        android:visibility="invisible">

        <TextView
            android:text="感謝您的訂購"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView"
            tools:src="@drawable/check1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="visible" />

        <TextView
            android:text="3秒後返回首頁"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTimer"
            android:textSize="18sp"
            android:textAlignment="center" />

    </LinearLayout>

</FrameLayout>